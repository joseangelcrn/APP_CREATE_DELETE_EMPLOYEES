            </div>

            <div class="form-group">
                <input type="text" placeholder="Nombre " class="form-control" name="nombre">
            </div>

            <div class="form-group">
                <input type="text" placeholder="Apel 1 " class="form-control" name="apel1">
            </div>

            <div class="form-group">
                <input type="text" placeholder="Apel 2 " class="form-control" name="apel2">
            </div>

            <div class="form-group">
                <input type="text" placeholder="Cargo " class="form-control" name="cargo">
            </div>

            <div class="form-group">
                <input type="text" placeholder="Pais" class="form-control" name="pais">
            </div>

            <div class="form-group">
                <input type="text" placeholder="Ciudad" class="form-control" name="ciudad">
            </div>

            <button class="btn btn-success">
                Guardar
            </button>

        </form>

